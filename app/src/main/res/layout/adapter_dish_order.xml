<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_avatar_restaurant"
        android:layout_width="95dp"
        android:layout_height="85dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="2dp"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/iv_avatar_dish"
            android:layout_width="95dp"
            android:layout_height="85dp"
            android:src="@drawable/avatar_restaurant"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quán Cơm Mẹ Nấu 20k"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$150.000"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:maxLines="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_decrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_decrease"
                android:scaleType="center"
                android:background="@drawable/bg_btn_add_card"
                android:layout_toStartOf="@id/tv_num_dish"/>
            <TextView
                android:id="@+id/tv_num_dish"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_toStartOf="@id/btn_increase"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"/>
            <ImageButton
                android:id="@+id/btn_increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_increase"
                android:scaleType="center"
                android:background="@drawable/bg_btn_add_card"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>