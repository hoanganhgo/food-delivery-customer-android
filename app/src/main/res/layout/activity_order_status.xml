<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ln_way_01"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:background="@color/grey_6"/>
        <LinearLayout
            android:id="@+id/ln_way_02"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:background="@color/grey_6"/>
        <LinearLayout
            android:id="@+id/ln_way_03"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:background="@color/grey_6"/>
        <LinearLayout
            android:id="@+id/ln_way_04"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:background="@color/grey_6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lb_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiting_confirm"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lb_find_shipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_shipper"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lb_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_lb_arrived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrived"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>